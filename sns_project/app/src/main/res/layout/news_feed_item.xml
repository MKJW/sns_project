<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="17dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/news_feed_item_register_imageView"
            android:layout_margin="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>


        <TextView
            android:id="@+id/news_feed_item_user_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/news_feed_item_register_imageView"
            android:text="user1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/menu" />
    </RelativeLayout>


    <ImageView

        android:id="@+id/news_feed_item_feed_imageView"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:srcCompat="@tools:sample/avatars" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/like" />
            <ImageView

                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dialog" />
            <ImageView

                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/paper_plane" />

        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bookmark" />
    </RelativeLayout>
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/news_feed_item_like_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/news_feed_item_contents_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temp contents"
        android:textSize="20dp"/>
</LinearLayout>